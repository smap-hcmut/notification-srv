apiVersion: v1
kind: Secret
metadata:
  name: smap-websocket-secrets
  namespace: smap
  labels:
    app: smap-websocket
type: Opaque
stringData:
  # Redis Configuration (sensitive)
  REDIS_HOST: "redis-service.smap.svc.cluster.local"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: "CHANGE_ME"
  
  # JWT Configuration
  JWT_SECRET_KEY: "CHANGE_ME_GENERATE_STRONG_SECRET"
  
  # Discord Webhook (Optional)
  DISCORD_WEBHOOK_ID: ""
  DISCORD_WEBHOOK_TOKEN: ""

